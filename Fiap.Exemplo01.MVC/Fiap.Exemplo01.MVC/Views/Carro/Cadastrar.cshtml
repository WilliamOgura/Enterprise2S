@model Fiap.Exemplo01.MVC.Models.Carro
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm())

{
    <div class="form-group">
        @Html.LabelFor(c=>c.Marca)
        @Html.TextBoxFor(c => c.Marca, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.Modelo)
        @Html.TextBoxFor(c=>c.Modelo, new{ @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Placa)
        @Html.TextBoxFor(c => c.Placa, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Ano)
        @Html.TextBoxFor(c => c.Ano, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Preco)
        @Html.TextBoxFor(c => c.Preco, new { @class = "form-control" })
    </div>
    <input type="submit" value="Gravar" class="btn btn-primary" />
}
