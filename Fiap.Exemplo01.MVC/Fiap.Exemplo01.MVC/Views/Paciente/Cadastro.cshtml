
@{
    ViewBag.Title = "Cadastro";

}

<h2>Cadastro</h2>

<form action="/Paciente/Gravar" method="post">
    <div class="form-group">
        <label>Nome:
            <input type="text" name="nome" id="id-nm" class="form-control"/>
        </label>
    </div>
    <div class="form-group">
        <label>Data Nascimento
            <input type="date" name="dataNascimento" id="id-data" class="form-control"/>
        </label>
    </div>
    <div class="form-group">
        <label>Nº do Convênio
            <input type="text" name="convenio" id="id-nr" class="form-control"/>
        </label>
    </div>
    <div class="form-group">
        <label> Tipo Sanguíneo
            <select name="tipo" id="id-tipo" class="form-control">
                <option>A</option>
                <option>B</option>
                <option>AB</option>
                <option>O</option>
            </select>
        </label>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />

</form>
